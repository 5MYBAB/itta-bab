<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fivemybab.ittabab.member.query.mapper.MemberMapper">

    <!-- 모든 회원 조회 쿼리 -->
    <select id="findAllMembers" resultType="com.fivemybab.ittabab.member.domain.Member">
        SELECT * FROM member_info
    </select>

    <!-- 특정 회원 조회 쿼리 -->
    <select id="findMemberById" parameterType="long" resultType="com.fivemybab.ittabab.member.domain.Member">
        SELECT * FROM member_info WHERE member_id = #{memberId}
    </select>

    <!-- 회원 추가 쿼리 -->
    <insert id="insertMember" parameterType="com.fivemybab.ittabab.member.command.entity.MemberInfo">
        INSERT INTO member_info (username, email, phone_number, joined_date, role)
        VALUES (#{username}, #{email}, #{phoneNumber}, #{joinedDate}, #{role})
    </insert>

    <!-- 회원 삭제 쿼리 -->
    <delete id="deleteMemberById" parameterType="int">
        DELETE FROM member_info WHERE member_id = #{memberId}
    </delete>

</mapper>
